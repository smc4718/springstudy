<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <!-- Calculator calc = new Calculator(); -->
  <!-- 아래 구문을 수행하는 bean태그 ↓ -->
  <bean class="com.gdu.app01.xml01.Calculator" id="calc" scope="singleton"></bean>



  <!-- 
    1. 디폴트 생성자 + setter
      Person man = new Person();
      man.setName("뽀로로");
      man.setAge(20);
      man.setCalculator(calc);
   -->
   <bean class="com.gdu.app01.xml01.Person" id="man">   <!-- 3가지 ↓↓↓↓↓ -->
     <property name="name" value="뽀로로"/>   <!-- 만들어둔 field 이름이 property 이다. -->
     <property name="age" value="20"/>        <!-- name="age"를 보고 setAge 를 찾으러 다니고 없으면 빨간줄 생김. -->
     <property name="calculator" ref="calc"/> <!-- 만들어둔 객체필드를 property로 넣을 때는 ref(래퍼런스)를 써줘서 자동완성으로 가져온다. -->
     <!-- 마지막에 "/" 를 써서 태그를 깔끔하게 닫아줌. -->
   </bean>

   
   <!-- 
     2. 필드를 이용한 생성자
       Person woman = new Person("루피", 20, calc);
    -->
   <bean class="com.gdu.app01.xml01.Person" id="woman">
     <constructor-arg value="루피"/>    <!-- constructor-arg(아규먼츠) 생성자의 전달하는 값 -->
     <constructor-arg value="20"/>      <!-- constructor-arg 는 name이 없기 때문에 반드시 필드값의 순서대로 적어주어야 한다. -->
     <constructor-arg ref="calc"/>
   
   </bean>                              

</beans>
